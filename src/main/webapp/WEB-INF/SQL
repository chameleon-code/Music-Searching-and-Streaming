1) DB 
      create database genie;
      use genie;
 
 2) Table 
     2-1) member(회원) 
			CREATE TABLE `member` (
				`id` VARCHAR(16) NOT NULL,
				`password` VARCHAR(25) NOT NULL,
				`name` VARCHAR(25) NOT NULL,
				`email` VARCHAR(120) NOT NULL,
				`phone` VARCHAR(50) NOT NULL,
				`address` VARCHAR(150) NULL DEFAULT NULL,
				`infoEmail` TINYINT(2) NULL DEFAULT '0',
				`infoSMS` TINYINT(2) NULL DEFAULT '0',
				PRIMARY KEY (`id`),
				UNIQUE INDEX `id` (`id`),
				UNIQUE INDEX `email` (`email`),
				INDEX `idx` (`id`)
			)
			COLLATE='utf8_general_ci'
			ENGINE=InnoDB;


     2-2) member_login (회원 로그인 시간기록)
			CREATE TABLE `member_login` (
				`id` VARCHAR(16) NOT NULL,
				`loginTime` TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP,
				PRIMARY KEY (`id`),
				CONSTRAINT `fk_id` FOREIGN KEY (`id`) REFERENCES `member` (`id`) ON UPDATE CASCADE ON DELETE CASCADE
			)
			COLLATE='utf8_general_ci'
			ENGINE=InnoDB;


	2-3) Artist (아티스트)
			CREATE TABLE `artists` (
				`artist` VARCHAR(250) NOT NULL,
				PRIMARY KEY (`artist`)
			)
			COLLATE='utf8_general_ci'
			ENGINE=InnoDB;
			           
     
 
	2-4) album(앨범)
			CREATE TABLE `album` (
				`albumid` INT(11) NOT NULL AUTO_INCREMENT,
				`album` VARCHAR(120) NOT NULL,
				`artist` VARCHAR(120) NOT NULL,
				`genre` VARCHAR(120) NOT NULL,
				`releasedate` VARCHAR(40) NOT NULL,
				PRIMARY KEY (`albumid`),
				UNIQUE INDEX `albumid` (`albumid`),
				INDEX `fk_artist` (`artist`)
			)
			COLLATE='utf8_general_ci'
			ENGINE=InnoDB;

     
	2-5) song (곡)
			CREATE TABLE `song` (
				`albumid` INT(11) NOT NULL,
				`album` VARCHAR(120) NOT NULL,
				`title` VARCHAR(200) NOT NULL,
				`artist` VARCHAR(120) NOT NULL,
				`duration` FLOAT NOT NULL,
				`tracknum` VARCHAR(50) NULL DEFAULT NULL,
				`releasedate` VARCHAR(50) NULL DEFAULT NULL,
				`filepath` VARCHAR(250) NOT NULL
			)
			COLLATE='utf8_general_ci'
			ENGINE=InnoDB;
			
	2-6) streaming (스트리밍 카운팅 체크 테이블)
		CREATE TABLE `streaming` (
			`title` VARCHAR(120) NOT NULL,
			`artist` VARCHAR(120) NOT NULL,
			`album` VARCHAR(120) NOT NULL,
			`counting` INT(11) NOT NULL AUTO_INCREMENT,
			`date` TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP,
			PRIMARY KEY (`counting`)
		)
		COLLATE='utf8_general_ci'
		ENGINE=InnoDB
				
